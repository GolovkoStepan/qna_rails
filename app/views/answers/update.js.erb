<% if @answer.valid? %>
  $('<%= "#answer-#{@answer.id}" %>').find('.card-body').html('<%= j @answer.body %>')
  $('<%= "#answer-#{@answer.id}" %>').find('.answer-update-at').html('Edited: <%= format_date(@answer.updated_at) %>')
  $('#answer-attachments-' + <%= @answer.id %>).html('<%= render partial: 'questions/file', collection: @answer.files, locals: { resource: @answer } %>')

  $('#edit-answer-form-modal').modal('hide')
<% else %>
  $('#edit-answer-form-modal').modal('hide')
  $('#edit-answer-modal-form-container').html("<%= j render partial: 'questions/edit_answer_form', locals: { answer: @answer } %>");
  $('#edit-answer-form-modal').modal('show')
<% end %>
