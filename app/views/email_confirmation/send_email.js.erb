<% if @result %>
  $('#email-confirmation-block').html('<div class="mt-2 mb-3">A confirmation link has been sent to your email. Please check.</div>')
<% else %>
  $('#email-confirmation-block').html('<div class="mt-2 mb-3"><i class="fas fa-times-circle"></i> Too many requests for sending codes. Only 5 requests per hour allowed.</div>')
<% end %>
